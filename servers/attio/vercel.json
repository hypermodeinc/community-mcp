{
  "functions": {
    "app/api/mcp/route.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/health", "destination": "/api/mcp" }
  ],
  "env": {
    "ATTIO_API_KEY": "@attio_api_key",
    "ATTIO_API_BASE_URL": "https://api.attio.com",
    "ATTIO_OPENAPI_URL": "https://api.attio.com/openapi/api"
  }
}
